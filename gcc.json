var gcc = {};

gcc.compiler.path = 'gcc';
gcc.compiler.unit_tests_path = './test/';
gcc.compiler.build_path = 'dev/custom/build/';
gcc.compiler.options: = ['-c', '-m64', '-Wall', '-Wno-address', '-std=c99',
                         '-pedantic', '-Wextra', '-Werror', '-Wpointer-arith',
                         '-Wcast-align', '-Wwrite-strings', '-Wswitch-default',
                         '-Wunreachable-code', '-Winit-self',
                         '-Wmissing-field-initializers',
                         '-Wno-unknown-pragmas', '-Wstrict-prototypes',
                         '-Wundef', '-Wold-style-definition'];
gcc.compiler.includes.prefix = '-I';
gcc.compiler.includes.items = ['dev/unity/src/', './src/',
                               gcc.compiler.unit_tests_path];
gcc.compiler.defines.prefix = '-D';
gcc.compiler.defines.items = ['UNITY_INCLUDE_DOUBLE', 'UNITY_SUPPORT_TEST_CASES',
                              'UNITY_SUPPORT_64'];
gcc.compiler.object_files.prefix = '-o';
gcc.compiler.object_files.extension = '.o';
gcc.compiler.object_files.destination = gcc.compiler.build_path;

gcc.linker.path = 'gcc';
gcc.linker.options = ['-lm','-m64'];
gcc.linker.includes.prefix = '-I';
gcc.linker.object_files.path = gcc.compiler.build_path;
gcc.linker.object_files.extension = '.o';
gcc.linker.bin_files.prefix = '-o';
gcc.linker.bin_files.extension = '.exe';
gcc.linker.bin_files.destination = gcc.compiler.build_path;

gcc.color = true;

gcc.unity.plugins = [];

exports.data = function() {
  return gcc;
}
